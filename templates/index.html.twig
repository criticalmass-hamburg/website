{% extends 'base.html.twig' %}

{% block content %}
    {# Hero Section with Carousel Background #}
    <section class="hero">
        <div id="hero-carousel" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="{{ asset('build/images/carousel/header1.jpg') }}" alt="Radfahren im Sonnenuntergang" />
                </div>
                <div class="carousel-item">
                    <img src="{{ asset('build/images/carousel/header2.jpg') }}" alt="Bike-up vor dem Telemichel" />
                </div>
                <div class="carousel-item">
                    <img src="{{ asset('build/images/carousel/header3.jpg') }}" alt="Bike-up auf dem Fischmarkt" />
                </div>
            </div>
        </div>

        <div class="hero-content">
            <h1 class="animate-fade-in-up">
                <i class="fa-solid fa-bicycle"></i>
                Critical Mass Hamburg
            </h1>
            <p class="lead animate-fade-in-up">
                Jeden letzten Freitag im Monat treffen wir uns zur gemeinsamen Radtour durch die Hansestadt.
            </p>
            <a href="#next-ride" class="btn btn-light btn-lg animate-fade-in-up">
                <i class="fa-solid fa-calendar-days me-2"></i>
                Nächste Tour
            </a>
        </div>

        <button class="carousel-control-prev" type="button" data-bs-target="#hero-carousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Zurück</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#hero-carousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Weiter</span>
        </button>
    </section>

    {# Next Ride Section #}
    {% include '_ride.html.twig' %}

    {# Features Section #}
    <section class="section bg-light">
        <div class="container">
            <div class="text-center mb-5">
                <h2 class="section-title text-center">Mitmachen</h2>
                <p class="lead text-muted">Werde Teil der Critical Mass Hamburg</p>
            </div>

            <div class="row g-4">
                <div class="col-md-6 col-lg-4">
                    <div class="feature-card">
                        <div class="feature-icon">
                            <i class="fa-solid fa-users"></i>
                        </div>
                        <h3>Folgen</h3>
                        <p>Bleib auf dem Laufenden und folge uns in den sozialen Medien für aktuelle News und Infos.</p>
                        <div class="social-buttons">
                            <a href="https://facebook.com/cmhamburg" class="btn btn-primary" title="Facebook">
                                <i class="fa-brands fa-facebook-f"></i>
                            </a>
                            <a href="https://instagram.com/criticalmasshamburg/" class="btn btn-danger" title="Instagram">
                                <i class="fa-brands fa-instagram"></i>
                            </a>
                            <a href="https://www.threads.com/@criticalmasshamburg" class="btn btn-dark" title="Threads">
                                <i class="fa-brands fa-threads"></i>
                            </a>
                            <a href="https://norden.social/@CriticalMassHamburg" class="btn btn-info" title="Mastodon">
                                <i class="fa-brands fa-mastodon"></i>
                            </a>
                        </div>
                    </div>
                </div>

                <div class="col-md-6 col-lg-4">
                    <div class="feature-card">
                        <div class="feature-icon">
                            <i class="fa-solid fa-comments"></i>
                        </div>
                        <h3>Mitgestalten</h3>
                        <p>Diskutiere mit in unserer Gruppe, bringe eigene Ideen ein und gestalte die Critical Mass aktiv mit.</p>
                        <a href="https://www.facebook.com/groups/CMHH.Diskussion/" class="btn btn-outline-primary">
                            <i class="fa-brands fa-facebook me-2"></i>
                            Zur Diskussionsgruppe
                        </a>
                    </div>
                </div>

                <div class="col-md-6 col-lg-4">
                    <div class="feature-card">
                        <div class="feature-icon">
                            <i class="fa-solid fa-location-crosshairs"></i>
                        </div>
                        <h3>Hinterherfahren</h3>
                        <p>Zu spät oder den Treffpunkt nicht gefunden? Mit Critical Maps findest du uns unterwegs.</p>
                        <div class="d-flex gap-2 flex-wrap">
                            <a href="http://criticalmaps.net/" class="btn btn-outline-primary">
                                Critical Maps
                            </a>
                            <a href="https://itunes.apple.com/de/app/critical-mass-berlin/id918669647" class="btn btn-dark">
                                <i class="fa-brands fa-apple"></i>
                            </a>
                            <a href="https://play.google.com/store/apps/details?id=de.stephanlindauer.criticalmaps" class="btn btn-success">
                                <i class="fa-brands fa-google-play"></i>
                            </a>
                        </div>
                    </div>
                </div>

                <div class="col-md-6 col-lg-4">
                    <div class="feature-card">
                        <div class="feature-icon">
                            <i class="fa-solid fa-photo-film"></i>
                        </div>
                        <h3>Anschauen</h3>
                        <p>Noch nicht überzeugt? Schau dir Videos und Fotos von unseren Touren an.</p>
                        <div class="d-flex gap-2 flex-wrap">
                            <a href="https://www.youtube.com/results?search_query=Critical+Mass+Hamburg" class="btn btn-danger">
                                <i class="fa-brands fa-youtube me-2"></i>
                                Videos
                            </a>
                            <a href="https://www.flickr.com/search/?text=Critical%20Mass%20Hamburg" class="btn btn-outline-primary">
                                <i class="fa-brands fa-flickr me-2"></i>
                                Fotos
                            </a>
                        </div>
                    </div>
                </div>

                <div class="col-md-6 col-lg-4">
                    <div class="feature-card">
                        <div class="feature-icon">
                            <i class="fa-solid fa-code"></i>
                        </div>
                        <h3>Mitentwickeln</h3>
                        <p>Diese Webseite ist Open Source. Hilf uns, sie zu verbessern!</p>
                        <a href="https://github.com/criticalmass-hamburg/website" class="btn btn-dark">
                            <i class="fa-brands fa-github me-2"></i>
                            GitHub
                        </a>
                    </div>
                </div>

                <div class="col-md-6 col-lg-4">
                    <div class="feature-card">
                        <div class="feature-icon">
                            <i class="fa-solid fa-map-location-dot"></i>
                        </div>
                        <h3>Noch mehr?</h3>
                        <p>Entdecke Critical Mass Touren in der ganzen Region.</p>
                        <div class="other-cities">
                            <a href="https://criticalmass.in/kiel">Kiel</a>
                            <a href="https://criticalmass.in/luebeck">Lübeck</a>
                            <a href="https://criticalmass.in/lueneburg">Lüneburg</a>
                            <a href="https://criticalmass.in/norderstedt">Norderstedt</a>
                            <a href="https://criticalmass.in/harburg">Harburg</a>
                            <a href="https://criticalmass.in/altona">Altona</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}

{% block javascripts %}
<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Initialize ride map if available
        var rideMapElement = document.getElementById('ride-map');
        if (rideMapElement && rideMapElement.dataset.latitude && rideMapElement.dataset.longitude) {
            CriticalMass.initMap('ride-map');
        }
    });
</script>
{% endblock %}
